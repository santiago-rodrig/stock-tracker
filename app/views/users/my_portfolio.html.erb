<h1>My portfolio</h1>
<div class="search-area">
  <h3>Search stocks</h3>
  <%= form_tag(search_stock_path, method: :get) do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: 'Stock ticker symbol', autofocus: true, class: 'form-control form-control-lg' %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: 'submit', class: 'btn btn-success' do %>
          <%= fa_icon 'search 2x' %> 
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<% if @stock %>
  <div class="card">
    <div class="card-header">
      Company details
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Symbol</strong>: <%= @stock.ticker %></li>
      <li class="list-group-item"><strong>Name</strong>: <%= @stock.name %></li>
      <li class="list-group-item"><strong>Las price</strong>: <%= @stock.last_price %></li>
    </ul>
  </div>
<% end %>
